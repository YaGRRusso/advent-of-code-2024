    "upgrade:patch": "npx npm-check-updates --target patch --root -u && npm install"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@yagrrusso/eslint-config": "^1.3.5",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "**/*.{js, jsx, ts, tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "clipboardy": "^4.0.0"
  }
